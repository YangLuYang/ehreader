    <!-- Download -->
    <PreferenceCategory
        android:title="@string/pref_download_title">
        <CheckBoxPreference
            android:defaultValue="@bool/pref_auto_download_default"
            android:key="@string/pref_auto_download"
            android:summary="@string/pref_auto_download_summary"
            android:title="@string/pref_auto_download_title" />
        <CheckBoxPreference
            android:defaultValue="@bool/pref_download_over_wifi_default"
            android:key="@string/pref_download_over_wifi"
            android:summary="@string/pref_download_over_wifi_summary"
            android:title="@string/pref_download_over_wifi_title" />
        <CheckBoxPreference
            android:defaultValue="@bool/pref_hide_files_default"
            android:key="@string/pref_hide_files"
            android:summary="@string/pref_hide_files_summary"
            android:title="@string/pref_hide_files_title" />
    </PreferenceCategory>
    <!-- Update -->
    <PreferenceCategory
        android:title="@string/pref_update_title">
        <PreferenceScreen
            android:key="@string/pref_check_update"
            android:title="@string/pref_check_update_title" />
        <tw.skyarrow.ehreader.widget.ListPreferenceWithSummary
            android:defaultValue="@string/pref_auto_check_update_default"
            android:dialogTitle="@string/pref_auto_check_update_title"
            android:entries="@array/pref_auto_check_update_entries"
            android:entryValues="@array/pref_auto_check_update_values"
            android:key="@string/pref_auto_check_update"
            android:title="@string/pref_auto_check_update_title" />
    </PreferenceCategory>
    <!-- Advanced -->
    <PreferenceCategory
        android:title="@string/pref_advanced_title">
        <PreferenceScreen
            android:key="@string/pref_clear_cache"
            android:title="@string/pref_clear_cache_title" />
        <PreferenceScreen
            android:key="@string/pref_clear_history"
            android:title="@string/pref_clear_history_title" />
        <PreferenceScreen
            android:key="@string/pref_clear_search"
            android:title="@string/pref_clear_search_title" />
    </PreferenceCategory>
    <!-- About -->
    <PreferenceCategory
        android:title="@string/pref_about_title">
        <PreferenceScreen
            android:key="@string/pref_version"
            android:title="@string/pref_version_title"/>
        <PreferenceScreen
            android:key="@string/pref_author"
            android:summary="@string/pref_author_summary"
            android:title="@string/pref_author_title" />
        <PreferenceScreen
            android:key="@string/pref_maintainer"
            android:summary="@string/pref_maintainer_summary"
            android:title="@string/pref_maintainer_title" />
        <PreferenceScreen
            android:key="@string/pref_source_code"
            android:summary="@string/pref_source_code_summary"
            android:title="@string/pref_source_code_title" />
    </PreferenceCategory>
</PreferenceScreen>